<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <android.support.design.widget.FloatingActionButton
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@android:drawable/btn_star_big_off"
        android:id="@+id/fab_details_addFav"
        android:layout_marginTop="184dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="304dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="304dp"
        app:backgroundTint="@android:color/darker_gray" />

    <LinearLayout
        android:id="@+id/activity_details"
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:context="com.example.android.movies.DetailsActivity"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">


        <ImageView
            android:id="@+id/details_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
             />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/details_TitleLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_title"/>
        <TextView
            android:id="@+id/details_Title"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"

            android:textAppearance="@style/TextAppearance.AppCompat.Title" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/details_releaseDateLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_releaseDate"/>
        <TextView
            android:id="@+id/details_releaseDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/details_avgVoteLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_averageVote"/>
            <TextView
                android:id="@+id/details_avgVote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
             />
        </LinearLayout>




            <TextView
                android:id="@+id/details_synopsisLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_synopsis"/>


            <TextView
                android:id="@+id/details_synopsis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



    </LinearLayout>
</android.support.constraint.ConstraintLayout>